
// Pyramid Graph

 #include <cs50.h>
 #include <stdio.h>




int main(void)
 {
    int ph, i, j, k, l, m;

// Get  height 
    do
             {
            ph = get_int("Input a Pyramid Height between 1 and
            8:    ") ;
             } 
            while
            (ph < 1 || ph > 8);
    // Print two half pyramids of hashes
for (i = 1; i <= ph; i++){
for (j = 1; j <= ph - i; j++) 
{
printf("  ") ;
} 
for (k = 1; k <= i ; k++) 
{
printf("#") ;
} 
for (l = 1; l <= 2 ; ++l) 
{
printf("  ") ;
} 
for (m = 1; m <= i ; ++m) 
{
printf("#" ) ;
} 
{
printf("\n") ;
} 

} 
return 0;
} 






